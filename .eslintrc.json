{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:jasmine/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "jasmine"],
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "no-unused-vars": ["error", {"varsIgnorePattern": "import"}],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ]
  }
}